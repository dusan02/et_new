# Production Environment Variables
# Copy to .env.production and fill in real values

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/earnings_table_prod"

# Redis
REDIS_URL="redis://localhost:6379"

# API Keys (REPLACE WITH REAL KEYS)
POLYGON_API_KEY="your_polygon_api_key_here"
FINNHUB_API_KEY="your_finnhub_api_key_here"
IEX_API_TOKEN="your_iex_token_here"
TIINGO_API_TOKEN="your_tiingo_token_here"
BENZINGA_API_KEY="your_benzinga_key_here"

# Feature Flags
USE_PUBLISH_GATE=true
READ_ONLY=false
ENABLE_PRICES_WORKER=true
ENABLE_EPSREV_WORKER=true

# Data Quality Thresholds (Production)
DQ_SCHEDULE_THRESHOLD=0
DQ_PRICE_THRESHOLD=98
DQ_EPSREV_THRESHOLD=90

# Legacy (for compatibility)
COV_SCHEDULE=0
COV_PRICE=98
COV_EPSREV=90

# Watchdog
WATCHDOG_MODE=daemon
WATCHDOG_INTERVAL_MS=300000

# Node Environment
NODE_ENV=production
PORT=3000